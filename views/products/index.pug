extends ../layouts/common

block content
    h1 Product
    .d-flex.align-items-center

        form.ml-auto(action="/users/search" method="GET", class="d-flex")
            input(type="text" name="q" class="form-control mb-2")
            button(class="btn btn-primary ml-2") Search 
    br
    .row(style='padding:10px;text-align:center; ')
        each product in products
            .col-sm-6.col-md-4.col-lg-3(style='background-color:yellow;padding:5px;')
                .card.mb-3
                    b=product.name
                    br
                    span= product.price
                    br
                    img.card(src= product.image, height=200)
                    br
                    span= product.description
                    br
                    //- href='/cart/add/:productId'
                    a.btn.btn-primary.w-30.m-auto(href='/cart/add/' + product.id ) Add to cart

    ul.ml-auto(class="pagination pagination-sm")
        li(class="page-item")
            a(class="page-link" href="#") Previous
        li(class="page-item")
            a(class="page-link" href="#") 1
        li(class="page-item")
            a(class="page-link" href="#") 2
        li(class="page-item")
            a(class="page-link" href="#") 3
        li(class="page-item")
            a(class="page-link" href="#") Next
