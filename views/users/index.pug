extends ../layouts/common

block content
    h1 User
    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") New

        form.ml-auto(action="/users/search" method="GET", class="d-flex")
            input(type="text" name="q" class="form-control mb-2")
            button(class="btn btn-primary ml-2") Search
        
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users 
            //- li= user.name
            tr
                td
                    img(src= user.avatar, width=50)
                td= user.name
                td= user.phone 
                td
                    a.btn-success(href='/users/' + user.id) View